<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center">

    <ImageView
        android:id="@+id/user_avatar_imageView"
        android:layout_width="@dimen/user_avatar_dimen"
        android:layout_height="@dimen/user_avatar_dimen"
        android:layout_margin="@dimen/user_avatar_margin"
        app:srcCompat="@android:color/background_light" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/user_avatar_margin"
        android:layout_gravity="left">

        <TextView
            android:id="@+id/user_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/user_name_size"
            android:textColor="@color/colorBlueDark"
            />

        <TextView
            android:id="@+id/user_contributions_count_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/user_name_text_view"
            android:textSize="@dimen/user_contributions_size"
            />
    </RelativeLayout>
</LinearLayout>