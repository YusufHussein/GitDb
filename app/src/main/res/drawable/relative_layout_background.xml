<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <!-- draw a 2 dp width border around the rectangle shape -->
            <stroke
                android:width="@dimen/repo_item_border_width"
                android:color="@android:color/darker_gray" />
        </shape>
    </item>
    <!--
        hide left, top and right side border using white color
        by padding 2 dp bottom side
    -->
    <item android:bottom="@dimen/repo_item_border_width">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" />
        </shape>
    </item>
</layer-list>
